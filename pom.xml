<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.4.2</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>

	<groupId>co.com.coomeva.devops.bank.domain</groupId>
	<artifactId>bank-backend</artifactId>
	<version>1.0.0</version>
	<name>bank-backend</name>
	<description>Spring Boot Project generated by Zathuracode</description>


	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<org.apache.commons.collections4>4.4</org.apache.commons.collections4>
		<java.version>11</java.version>
		 <!-- Propiedad usada para localizar el fichero con la configuracion especifica segun perfil. -->
        <build.profile.id>dev</build.profile.id>
         <!-- Por defecto, solo teste unitarios seran ejecutados. -->
        <skip.integration.tests>true</skip.integration.tests>
        <skip.unit.tests>false</skip.unit.tests>
        <skip.jacoco>false</skip.jacoco>
	</properties>
	
	<profiles>
        <profile>
            <id>dev</id>
        </profile>
        <profile>
            <id>integration-test</id>
            <properties>
                <!-- Usado para localizar configuracion especifica . -->
                <build.profile.id>integration-test</build.profile.id>
                <!-- Solo los test de integracion seran ejecutados. -->
                <skip.integration.tests>false</skip.integration.tests>
                <skip.unit.tests>true</skip.unit.tests>
                <skip.jacoco>true</skip.jacoco>
            </properties>
        </profile>
    </profiles>

	<dependencies>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-data-jpa</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-web</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-validation</artifactId>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-actuator</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-lang3</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-collections4</artifactId>
			<version>${org.apache.commons.collections4}</version>
		</dependency>

		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
			<scope>runtime</scope>
		</dependency>

		<!-- https://mvnrepository.com/artifact/org.mockito/mockito-core -->
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<scope>test</scope>
		</dependency>

		<!-- https://mvnrepository.com/artifact/org.mockito/mockito-junit-jupiter -->
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-junit-jupiter</artifactId>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
			<exclusions>
				<exclusion>
					<groupId>org.junit.vintage</groupId>
					<artifactId>junit-vintage-engine</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>

	<build>
		<plugins>
			<plugin>
			    <artifactId>maven-surefire-plugin</artifactId>
			    <configuration>
                    <!-- Se salta test unitarios si el valor de skip.unit.tests property es true -->
                    <skipTests>${skip.unit.tests}</skipTests>
                    <!-- Excluye los test de integracion cuando se ejecutan test unitarios. ÃŸ-->
                    <excludes>
                        <exclude>**/IT*.java</exclude>
                    </excludes>
                </configuration>
			</plugin>
			
			<plugin>
			    <artifactId>maven-failsafe-plugin</artifactId>
			    <configuration>
                   <!-- Se salta los test de integracion si el valor de skip.integration.tests es true -->
                   <skipTests>${skip.integration.tests}</skipTests>
                </configuration>
			    <executions>
			        <execution>
			            <goals>
			                <goal>integration-test</goal>
			                <goal>verify</goal>
			            </goals>			            
			        </execution>			          
			    </executions>
			    
			</plugin>

			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			
			<!-- Code Coverage -->
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>0.8.6</version>
				<configuration>
					<skip>${skip.jacoco}</skip>
					<excludes>
						<!-- exclude class -->
						<exclude>com/vobi/devops/bank/SpringBootRunner.class</exclude>
						
						<!-- exclude classes in package -->
						<exclude>com/vobi/devops/bank/entityservice/*</exclude>
						<exclude>com/vobi/devops/bank/entitycontroller/*</exclude>
						<exclude>com/vobi/devops/bank/dto/*</exclude>
						<exclude>com/vobi/devops/bank/domain/*</exclude>
						<exclude>com/vobi/devops/bank/mapper/*</exclude>
						<exclude>com/vobi/devops/bank/utility/*</exclude>
						<exclude>com/vobi/devops/bank/exception/*</exclude>
						
					</excludes>
				</configuration>
				<executions>
					<execution>
						<id>prepare-agent</id>
						<goals>
							<goal>prepare-agent</goal>
						</goals>
					</execution>
					<execution>
						<id>report</id>
						<phase>test</phase>
						<goals>
							<goal>report</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<!-- Code Coverage -->
		</plugins>
	</build>

</project>
